@model BanSach.Models.Thit

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            MaSP
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaThit, new { htmlAttributes = new { @class = "form-control" } })
                @Html.Hidden("MaSach",Model.MaThit)
            </div>
        </div>

        <div class="form-group">
            TenSP
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenThit, new { htmlAttributes = new { @class = "form-control" } })
                
            </div>
        </div>

        <div class="form-group">
            GiaBan
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        <div class="form-group">
            MoTa
            <div class="col-md-10">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        <div class="form-group">
            AnhBia
            <div class="col-md-10">
                @Html.EditorFor(model => model.AnhBia, new { htmlAttributes = new { @class = "form-control" } })
                <img src="@Url.Content("~/HinhAnhSp/"+ Model.AnhBia)" width="100px" />
                @ViewBag.ThongBao
            </div>
        </div>

        <div class="form-group">
           NgayCapNhat
            <div class="col-md-10">
                <input type="date" name="NgayCapNhat" value="@Model.NgayCapNhat" />
               
            </div>
        </div>

        <div class="form-group">
            SoLuongTon
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        

        <div class="form-group">
            LoaiSP
            <div class="col-md-10">
                @Html.DropDownList("MaChuDe")

            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
