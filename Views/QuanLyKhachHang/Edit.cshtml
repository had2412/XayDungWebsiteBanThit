@model BanSach.Models.KhachHang

@{
    ViewBag.Title = "Chỉnh sửa khách hàng";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Chỉnh sửa khách hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Khách hàng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.MaKH)

        <div class="form-group">
            @Html.LabelFor(m => m.HoTen, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.EditorFor(m => m.HoTen, new { htmlAttributes = new { @class = "form-control" } })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.TaiKhoan, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.EditorFor(m => m.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MatKhau, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.PasswordFor(m => m.MatKhau, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NhapLaiMatKhau, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.PasswordFor(m => m.NhapLaiMatKhau, new { @class = "form-control" })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DiaChi, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.EditorFor(m => m.DiaChi, new { htmlAttributes = new { @class = "form-control" } })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DienThoai, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.EditorFor(m => m.DienThoai, new { htmlAttributes = new { @class = "form-control" } })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.GioiTinh, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.EditorFor(m => m.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NgaySinh, new { @class = "control-label col-md-2" })
            <div class="col-md-10">@Html.EditorFor(m => m.NgaySinh, new { htmlAttributes = new { @class = "form-control", type = "date" } })</div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}
